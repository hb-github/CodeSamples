{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		  }
	},
	"plugins": [ "babel" ],
	"extends": "airbnb",

	"parser": "babel-eslint",
	"rules": {
		"no-console": 0,
		"no-underscore-dangle": 0,
		"no-unused-vars": [ "error", { "argsIgnorePattern": "next" } ],
		"no-use-before-define": [ "error", { "variables": false } ],
		"no-multi-str": 0
	}
}
